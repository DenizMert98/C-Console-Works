namespace Kitapçı_İndirim_Örneği
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Almak istediğiniz kitap adedini giriniz");
            int adet = int.Parse(Console.ReadLine());
            double toplam = 0;
            if (adet < 10)
            {
                toplam = (adet * 20) * 0.9;
                Console.WriteLine("İndirimli Toplam Tutar " + toplam);

            }
            else if (adet < 20)
            {
                toplam = (adet * 20) * 0.8;
                Console.WriteLine("İndirimli Toplam Tutar " + toplam);

            }
            else if (adet < 40)
            {
                toplam = (adet * 20) * 0.6;
                Console.WriteLine("İndirimli Toplam Tutar " + toplam);

            }
            else
            {
                toplam = (adet * 20) * 0.5;
                Console.WriteLine("İndirimli Toplam Tutar " + toplam);

            }
            Console.Read();
        }
    }
}
